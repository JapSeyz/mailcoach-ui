{
    "name": "spatie/mailcoach-ui",
    "description": "The UI of the Mailcoach app",
    "keywords": [
        "spatie",
        "mailcoach-ui"
    ],
    "homepage": "https://github.com/spatie/mailcoach-ui",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.0",
        "psalm/plugin-laravel": "^1.2",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\MailcoachUi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\MailcoachUi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\MailcoachUi\\MailcoachUiServiceProvider"
            ],
            "aliases": {
                "MailcoachUi": "Spatie\\MailcoachUi\\MailcoachUiFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
